<section class="border-grid max-w-[1200px] w-full mx-auto flex flex-col lg:flex-row justify-between mt-[40px] space-x-[20px]">
    <div class="flex container-wrapper justify-center items-center">
      <div class="container flex flex-col items-start gap-2 py-8 md:py-10 lg:py-12 max-w-[600px]">
          <Draco::Link
          @iconSize={{15}}
          class="font-[500] pb-[10px] pl-[2px]"
          @iconPosition="trailing"
          @icon="lucide:arrow-right"
          @text="Introducing Draco v0.1"
          @href="https://github.com/corinvo/dracoui"
        >
          <Draco::Mark @size={{14}} />
        </Draco::Link>

        <h1 class="text-2xl font-[500] leading-tight tracking-tighter md:text-4xl">
          {{#if @title}}
            {{this.title}}
          {{else}}
            {{yield to='title'}}
          {{/if}}
        </h1>

        <p class="max-w-2xl text-[14px] font-[400] dark:text-[#A1A1A1]">
          {{#if @description}}
            {{this.description}}
          {{else}}
            {{yield to='description'}}
          {{/if}}
        </p>

        <div class="flex gap-2.5 w-full items-start pt-2">
          <Draco::Button @text="Get Started" @route="foundations" />
          <Draco::Button @text="Browse Components" @route="components" @type="secondary" />
          <Draco::Button @text="Licensed Under MIT" @type="tertiary" @href="https://github.com/corinvo/dracoui/blob/main/LICENSE" />
        </div>
      </div>
    </div>

    <div class="careers_root__PB4wl w-[575px] h-[575px] overflow-hidden">
      <div class="absolute inset-0 h-full w-full bg-transparent bg-[linear-gradient(to_right,#80808012_1px,transparent_1px),linear-gradient(to_bottom,#80808012_1px,transparent_1px)] bg-[size:24px_24px]" />
      <div class="grain-overlay absolute inset-0 z-10 pointer-events-none" />
      <div class="careers_container__9htdv relative flex items-center justify-center">
        <Page::Home::Hero::ComponentsShowcase />
      </div>
    </div>
  </section>
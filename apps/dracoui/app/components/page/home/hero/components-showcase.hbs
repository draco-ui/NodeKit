<div class="absolute inset-0 w-full h-full grid grid-cols-6 grid-rows-6 z-[100]">
  {{#each (range 0 6) as |row|}}
    {{#each (range 0 6) as |col|}}
      {{#if (and (eq row 1) (or (eq col 1) (eq col 2)))}}
        <div class="w-full h-full" />
      {{/if}}

      {{#if (and (eq row 1) (eq col 3))}}
        <div class="w-full h-full relative">
            <span class="absolute left-0 top-1/2 transform -translate-y-1/2 w-[2px] h-4/5 bg-[#272633]" />

            <span class="absolute right-0 top-1/2 transform -translate-y-1/2 w-[2px] h-4/5 bg-[#272633]" />

            <span class="absolute top-0 left-1/2 transform -translate-x-1/2 w-4/5 h-[2px] bg-[#272633]" />

            <span class="absolute bottom-0 left-1/2 transform -translate-x-1/2 w-4/5 h-[2px] bg-[#272633]" />
        </div>
      {{/if}}

      {{#if (and (eq row 1) (eq col 4))}}
        <div class="w-full h-full relative">
          <span class="absolute right-0 top-1/2 transform -translate-y-1/2 w-[2px] h-4/5 bg-[#272633] z-0" />
          <span class="absolute top-0 left-1/2 transform -translate-x-1/2 w-4/5 h-[2px] bg-[#272633] z-0" />
          <span class="absolute bottom-0 left-1/2 transform -translate-x-1/2 w-4/5 h-[2px] bg-[#272633] z-0" />

          <div class="relative flex flex-col space-y-[15px] h-full w-full justify-center items-center">
            <div class="flex items-center justify-center space-x-[10px] z-10">
              <Draco::Toggle @size="small" @checked={{true}} />
              <Draco::Toggle @size="small" @icon="healthicons:artificial-intelligence" />
            </div>

            <Draco::Toggle @checked={{true}} @color="amber" @iconSize={{12}} @icon={{array
              (hash checked="heroicons:lock-closed-solid")
              (hash unchecked="heroicons:lock-open-solid")
            }} class="z-10" />
          </div>
        </div>
      {{/if}}

      {{#if (and (eq row 1) (eq col 5))}}
        <div class="w-full h-full relative">
          <span class="absolute top-0 left-1/2 transform -translate-x-1/2 w-4/5 h-[2px] bg-[#272633]" />

          <span class="absolute bottom-0 left-1/2 transform -translate-x-1/2 w-4/5 h-[2px] bg-[#272633]" />
        </div>
      {{/if}}

      {{#if (and (eq row 1) (eq col 5))}}
        <div class="w-full h-full relative">
          <span class="absolute top-0 left-1/2 transform -translate-x-1/2 w-4/5 h-[2px] border-t-2 border-dashed border-[#9EA2AC] z-0" />
          <span class="absolute right-0 top-1/2 transform -translate-y-1/2 w-[2px] h-4/5 border-r-2 border-dashed border-[#9EA2AC] z-0" />
          <span class="absolute left-0 top-1/2 transform -translate-y-1/2 w-[2px] h-4/5 border-r-2 border-dashed border-[#9EA2AC] z-0" />
          <span class="absolute bottom-0 left-1/2 transform -translate-x-1/2 w-4/5 h-[2px] border-b-2 border-dashed border-[#9EA2AC] z-0" />

          <div class="relative flex flex-col space-y-[15px] h-full w-full justify-center items-center">
            <Draco::Avatar::Group
              @size="small"
              @members={{array
                (hash username="botond-szabo" provider="github")
                (hash username="unknown" provider="bitbucket")
                (hash username="gitlab" provider="gitlab")
              }}
            />
          </div>
        </div>
      {{/if}}

        {{#if (and (eq row 2) (eq col 1))}}
        <div class="w-full h-full relative col-span-2">
          <span class="absolute right-0 top-1/2 transform -translate-y-1/2 w-[2px] h-4/5 bg-[#272633] z-0" />
          <span class="absolute left-0 top-1/2 transform -translate-y-1/2 w-[2px] h-4/5 bg-[#272633] z-0" />
          <span class="absolute top-0 left-1/2 transform -translate-x-1/2 w-[90%] h-[2px] bg-[#272633] z-0" />
          <span class="absolute bottom-0 left-1/2 transform -translate-x-1/2 w-[90%] h-[2px] bg-[#272633] z-0" />

          <div class="relative flex flex-row space-x-[15px] h-full w-full justify-center items-center px-[20px]">
            <Draco::Skeleton @shape="square" @isFullWidth={{true}} />
            <div>
              <Draco::Skeleton />
            </div>
          </div>
        </div>
      {{/if}}

      {{#if (and (eq row 2) (or (eq col 1) (eq col 2)))}}
        <div class="w-full h-full relative">
          <span class="absolute right-0 top-1/2 transform -translate-y-1/2 w-[2px] h-4/5 bg-[#272633] z-0" />
          <span class="absolute bottom-0 left-1/2 transform -translate-x-1/2 w-4/5 h-[2px] bg-[#272633] z-0" />
        </div>
      {{/if}}

      {{#if (and (eq row 3) (eq col 1))}}
        <div class="w-full h-full border-b-2 border-r-2 dark:border-[#242424] flex justify-center items-center">
          <Draco::LoadingDots @size="large" />
        </div>
      {{/if}}

      {{#if (and (eq row 3) (eq col 2))}}
        <div class="w-full h-full border-b-2 border-r-2 dark:border-[#242424]" />
      {{/if}}

      {{#if (and (eq row 4) (eq col 1))}}
        <div class="w-full h-full" />
      {{/if}}

      {{#if (and (eq row 4) (eq col 1))}}
        <div class="w-full h-full border-l-2 border-b-2 col-span-2 row-span-2 dark:border-[#242424]" />
      {{/if}}

      {{#if (and (eq row 4) (eq col 5))}}
        <div class="w-full h-full border-x-2 border-b-2 dark:border-[#242424]" />
      {{/if}}

      {{#if (and (eq row 4) (eq col 5))}}
        <div class="w-full h-full border-r-2 border-b-2 dark:border-[#242424]" />
      {{/if}}

      {{#if (and (eq row 4) (eq col 5))}}
        <div class="w-full h-full border-r-2 border-b-2 dark:border-[#242424]" />
      {{/if}}

      {{#if (and (eq row 5) (eq col 1))}}
        <div class="w-full h-full" />
      {{/if}}

      {{#if (and (eq row 5) (eq col 4))}}
        <div class="w-full h-full border-x-2 border-b-2 row-span-2 dark:border-[#242424] flex flex-col items-center justify-center space-y-[10px]">
          <Draco::Badge @text="Red" @size="small" @color="red" />
          <Draco::Badge @text="Pink" @size="small" @color="pink" />
          <Draco::Badge @text="Amber" @size="small" @color="amber" />
          <Draco::Badge @text="Green" @size="small" @color="green" />
          <Draco::Badge @text="Blue" @icon="lucide:badge-info" @iconSize={{13}} @size="small" @color="blue-subtle" />
          <Draco::Badge @text="Purple" @size="small" @icon="lucide:git-pull-request-arrow" @iconSize={{12}} @color="purple-subtle" />
        </div>
      {{/if}}
    {{/each}}
  {{/each}}
</div>
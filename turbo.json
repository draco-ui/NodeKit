{
  "$schema": "https://turbo.build/schema.json",
  "daemon": false,
  "tasks": {
    "build": {
      "dependsOn": [
        "build:dracoui-styles",
        "build:dracoui-react",
        "build:dracoui-ember"
      ],
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build:dracoui-styles": {
      "cache": false,
      "outputs": ["packages/@dracoui-styles/dist/**", "packages/@dracoui-styles/dist/css/**"]
    },
    "build:dracoui-react": {
      "cache": false,
      "dependsOn": ["build:dracoui-styles"],
      "outputs": ["packages/@dracoui-react/dist/**"]
    },
    "build:dracoui-ember": {
      "cache": false,
      "dependsOn": ["build:dracoui-styles"],
      "outputs": ["dist/**"]
    }
  },
  "globalDependencies": ["!apps/**"]
}
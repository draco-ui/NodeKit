{
  "name": "@dracoui/types",
  "version": "1.0.0",
  "description": "Shared TypeScript types and interfaces for Draco UI components across all frameworks",
  "keywords": [
    "dracoui",
    "types",
    "typescript",
    "design-system",
    "component-types"
  ],
  "author": "Draco UI Team",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./button": "./dist/button.d.ts"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "dev": "tsup --watch"
  },
  "devDependencies": {
    "tsup": "^8.5.0",
    "type-fest": "^5.2.0",
    "typescript": "^5.7.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/draco-ui/dracoui.git",
    "directory": "packages/@dracoui-types"
  }
}

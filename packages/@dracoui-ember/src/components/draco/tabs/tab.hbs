<li class={{this.classNames}} ...attributes role="presentation">
  {{!-- Make this an Interactive Component --}}
  <button
    role="tab"
    type="button"
    id={{this._tabId}}
    class="draco-tabs__tab-button"
    aria-controls={{this.coupledPanelId}}
    aria-selected={{if this.isSelected "true" "false"}}
    tabindex={{unless this.isSelected "-1"}}
    {{did-insert this.didInsertNode @isSelected}}
    {{did-update this.didUpdateNode @count @isSelected}}
    {{will-destroy this.willDestroyNode}}
    {{on "click" this.onClick}}
    {{on "keyup" this.onKeyUp}}
  >
    {{#if this.icon}}
      <span>Icon Element Here</span>
    {{/if}}

    {{yield}}

    {{#if this.text}}
      <span class="draco-tabs__tab__text">
        {{this.text}}
      </span>
    {{/if}}

    {{#if @count}}
      <span>Insert Count Element Here</span>
    {{/if}}
  </button>
</li>
<div class={{this.classNames}} ...attributes>
  {{#if this.members.length}}
    {{#each this.members as |member index|}}
      {{#if (or (eq this.limit 0) (lt index this.limit))}}
        {{#if member.provider}}
          {{#if (eq member.provider "github")}}
            <Draco::Avatar::Github
              @alt={{member.username}}
              @size={{this.size}}
              @shape={{this.shape}}
              @username={{member.username}}
            />
          {{else if (eq member.provider "gitlab")}}
            <Draco::Avatar::Gitlab
              @alt={{member.username}}
              @size={{this.size}}
              @shape={{this.shape}}
              @username={{member.username}}
            />
          {{else if (eq member.provider "bitbucket")}}
            <Draco::Avatar::Bitbucket
              @alt={{member.username}}
              @size={{this.size}}
              @shape={{this.shape}}
              @username={{member.username}}
            />
          {{/if}}
        {{/if}}

        {{#if member.src}}
          <Draco::Avatar
            @size={{this.size}}
            @src={{member.src}}
            @shape={{this.shape}}
          />
        {{/if}}
      {{/if}}
    {{/each}}

    {{#if (and (not (eq this.limit 0)) (gt this.members.length this.limit))}}
      <span class={{concat
        "draco-avatar-group--remaining-count "
        "draco-avatar-remaining--size-" this.size
      }}>
        +{{draco-subtract this.members.length this.limit}}
      </span>
    {{/if}}
  {{else}}
    {{yield}}
  {{/if}}
</div>

<div class="draco-avatar-gitlab" aria-label={{concat "Avatar for " this.username}} ...attributes>
  <Draco::Avatar @src={{this.userProfilePicture}} @size={{this.size}} @shape={{this.shape}} @alt={{this.alt}} />

  <Draco::Icon
    @name="devicon:gitlab"
    @size={{if (eq this.size "small") 10
      (if (eq this.size "medium") 12 16)
    }}
    class={{this.classNames}}
  />
</div>
<div class="draco-avatar-bitbucket" aria-label={{concat "Avatar for " this.username}} ...attributes>
  <Draco::Avatar @src={{this.src}} @size={{this.size}} @shape={{this.shape}} @alt={{if this.alt this.alt this.username}} />

  <Draco::Icon
    @name="mdi:bitbucket"
    @size={{if (eq this.size "small") 10
      (if (eq this.size "medium") 12 16)
    }}
    @color="white"
    class={{this.classNames}}
  />
</div>
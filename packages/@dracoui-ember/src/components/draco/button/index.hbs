{{!-- packages/core/src/components/interactive/template.hbs --}}
<Draco::Interactive
  class={{this.classNames}}
  @current-when={{@current-when}}
  @models={{draco-link-to-models @model @models}}
  @query={{draco-link-to-query @query}}
  @replace={{@replace}}
  @route={{@route}}
  @isRouteExternal={{@isRouteExternal}}
  @href={{@href}}
  @isHrefExternal={{@isHrefExternal}}
  ...attributes
  aria-label={{if this.isIconOnly this.text null}}
>
  {{#if this.isIconOnly}}
    {{#if @icon}}
      <span class={{this.iconWrapperClass}}>
        <IconifyIcon @icon={{@icon}} class={{this.iconClass}} />
      </span>
    {{/if}}
  {{else}}
     {{#if @icon}}
      {{#if (eq this.iconPosition "leading")}}
        <span class={{this.iconWrapperClass}}>
          <IconifyIcon @icon={{@icon}} class={{this.iconClass}} />
        </span>
        <span class={{this.textClass}}>
          {{this.text}}
        </span>
      {{else}}
        <span class={{this.textClass}}>
          {{this.text}}
        </span>
        <span class={{this.iconWrapperClass}}>
          <IconifyIcon @icon={{@icon}} class={{this.iconClass}} />
        </span>
      {{/if}}
    {{else}}
      <span class={{this.textClass}}>
        {{this.text}}
      </span>
    {{/if}}
  {{/if}}
</Draco::Interactive>

<Draco::Button
  @size={{this.size}}
  @color={{this.color}}
  title={{@textToCopy}}
  class={{this.classNames}}
  @isFullWidth={{this.isFullWidth}}
  aria-label={{concat "copy " @textToCopy}}
  {{draco-clipboard
    text=@textToCopy
    onSuccess=this.onSuccess
    onError=this.onError}}
  ...attributes
>
  <span class="draco-copy-snippet__text">
    {{this.textToShow}}
  </span>

  <Draco::Icon
    @size={{14}}
    @name={{this.icon}}
    class="draco-copy-snippet__icon draco-copy-snippet__icon--{{this._status}}"
  />
</Draco::Button>